@model IEnumerable<Product>;
@{
    ViewData["Title"] = "Home Page";
   
}

<div class="container">
    <div class="row">
    <div id="carouselExampleIndicators" class="carousel slide col-12">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/Images/Carousel/61GfWyQax7L._SX3000_.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                    <img src="/Images/Carousel/61lwJy4B8PL._SX3000_.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                    <img src="/Images/Carousel/71Ie3JXGfVL._SX3000_.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    </div>
    
        @if (!Model.Any())
        {
            <div class="alert  alert-warning mt-5">
                <h4 class="alert-heading">No Products</h4>
                <p class="mb-0">There Is No Products Added Yet!</p>
            </div>
        }
        else
        {
        <div class="row d-flex justify-content-center align-items-center mt-3">
            @foreach(var prod in Model)
            {
                <div class="col-sm-5 col-md-3 col-lg-2 card mx-3 bg-light index-card border-primary">
                    <div class="card-header">
                        <img class="card-img" src="@prod.Image" style="height:300px" />
                    </div>
                    <div class="card-body">
                            <h3>@prod.Title</h3>
                        <div class="card-text">@Html.Raw(prod.Description)</div>
                    </div>
                    <div class="card-footer">
                        <div class="row mt-4">
                            <span class="text-primary col-6 text-start">Price: @(prod.Price)$</span>
                            <a class="btn btn-success col-6 text-center" asp-controller="Home"
                            asp-action="ProdDetails" asp-route-Id="@prod.Id">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
           
        }

    </div>     
  

