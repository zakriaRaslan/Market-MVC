@model Category
@{
    ViewData["Title"] = "New Category";
}

<div class="card">
        <div class="card-header row m-0">
        <h2 class="text-primary">
            Create New Category
        </h2>
        </div>
        <div class="card-body p-4">
        <form method="post">
           <div class="text-danger" asp-validation-summary="ModelOnly">
            </div>
            <div class="mb-3 py-2 form-floating">
                <input class="form-control border-0 shadow" asp-for="Name" />
                <label class="ms-2" asp-for="Name"></label>
                <span class="text-danger" asp-validation-for="Name"> </span>
            </div>
            <div class="mb-3 d-flex justify-content-around p-1">
                <a class="btn btn-outline-warning" style="width:40%" asp-action="Index">Back To List</a>
                <button class="btn btn-outline-success" style="width:40%" type="submit" asp-controller="Categories" asp-action="Create">Add</button>
            </div>

        </form>
        </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial"></>
}